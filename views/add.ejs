<% include partials/header %>

 <div class="background" id="add">
   <div class="row justify-content-center" id="overlay">
        <div class="col-8 col-md-4">
          <form class="addArticle" method="POST" action="/add" class="mt-2" enctype="multipart/form-data">
          <div class="form-group">
            <select name="type" class="form-control" id="exampleFormControlSelect1">
              <option value="food">Food</option>
              <option value="dessert">Dessert</option>
              <option value="beverage">Beverage</option>
            </select>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="title" placeholder="Title">
          </div>
          <div class="form-group">
            <textarea name="brief" class="form-control" rows="3">Brief</textarea>
          </div>
          <div class="form-group">
            <input class="form-control" type="file" name="image" accept="image/*" required>
          </div>
          <div class="form-group">
            <textarea name="ingredients" class="form-control" rows="3">Ingredients</textarea>
          </div>
          <div class="form-group">
            <textarea name="preparation" class="form-control" rows="3">Preparation</textarea>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="author" placeholder="Author">
          </div>
          <button type="submit" class="btn btn-success mb-3">Submit</button>
          <div class="progress">
            <div class="progress-bar bg-success" id="progressBar" role="progressbar" style="width: 0;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
          </div>
          </form>
      </div>
   </div>


    
  </div>
  
<% include partials/footer %>