<% include partials/header %>
  <div class="container-fluid portion">
  <h1><%= articles.length %> results found:</h1>
    <div class="row">
     <% for(var i = articles.length - 1;  i > -1; i--){%>
      <div class="col-md-6 col-lg-3 mb-3">
        <a href="/articles/<%= articles[i]._id %>">
          <div class="card">
            <img src="<%= articles[i].image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-text card-text1">Guide</p>
              <h3 class="card-title"><%= articles[i].title %></h3>
              <p class="card-text card-text2">By <%= articles[i].author %></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
    </div>
  </div>

<% include partials/footer %>